<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ineuron.dataaccess.db.mappers.OrderMapper">


	<!-- Order -->
	
	<insert id="addOrder">
		insert into Orders (serialNumber,orderNumber,productId,userId,productionPeriod,amount,status,customizedInfo,orderDate,orderDateTime,deliveryDate,customer,payment,validFlag)
		values(#{serialNumber},#{orderNumber},#{productId},#{userId},#{productionPeriod},#{amount},#{status},#{customizedInfo},#{orderDate},#{orderDateTime},#{deliveryDate},#{customer},#{payment},#{validFlag})
	</insert>
	
	<select id="getOrders" resultType="com.ineuron.domain.order.entity.Order">
		select * from Orders
	</select>
	
	<select id="getOrderById" resultType="com.ineuron.domain.order.entity.Order">
		select * from Orders where id=#{id}
	</select>

	<select id="getLatestOrderByDate" resultType="com.ineuron.domain.order.entity.Order">
		select * from Orders where orderDate=#{orderDate} and 
		 serialNumber=(select max(serialNumber) from Orders where orderDate=#{orderDate})
	</select>

	<update id="updateOrder">
		update Orders set status = #{status} where id = #{id}
	</update>

	<update id="deleteOrder">
		update Orders set validFlag = -1 where id = #{id}
	</update>

	
</mapper>